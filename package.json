{
	"name": "ai-ignore-helper",
	"publisher": "usblsb",
	"displayName": "AI Ignore Helper",
	"description": "Una extensión configurable para Visual Studio Code que permite añadir archivos y carpetas a múltiples tipos de archivos ignore",
    "version": "3.0.4",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.60.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/user/ai-ignore-helper.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "AI Ignore Helper",
			"properties": {
				"ai-ignore.ignoreFiles": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"description": "Nombre descriptivo del archivo ignore"
							},
							"path": {
								"type": "string",
								"description": "Ruta relativa del archivo ignore"
							},
							"description": {
								"type": "string",
								"description": "Descripción del propósito del archivo ignore"
							},
							"createIfNotExists": {
								"type": "boolean",
								"description": "Crear el archivo si no existe"
							},
							"enabled": {
								"type": "boolean",
								"description": "Habilitar este archivo ignore"
							}
						}
					},
					"default": [
						{
							"name": "Trae Ignore",
							"path": ".trae/.ignore",
							"description": "Archivo ignore para Trae AI",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Docker Ignore",
							"path": ".dockerignore",
							"description": "Archivo ignore para Docker",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "NPM Ignore",
							"path": ".npmignore",
							"description": "Archivo ignore para NPM",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Vercel Ignore",
							"path": ".vercelignore",
							"description": "Archivo ignore para Vercel",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "GIT Ignore",
							"path": ".gitignore",
							"description": "Archivo ignore para GIT",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "ESLint Ignore",
							"path": ".eslintignore",
							"description": "Archivo ignore para ESLint",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Prettier Ignore",
							"path": ".prettierignore",
							"description": "Archivo ignore para Prettier",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Sourcegraph Ignore",
							"path": ".sourcegraphignore",
							"description": "Archivo ignore para Sourcegraph Cody",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Jest Ignore",
							"path": ".jestignore",
							"description": "Archivo ignore para Jest",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Webpack Ignore",
							"path": ".webpackignore",
							"description": "Archivo ignore para Webpack",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Babel Ignore",
							"path": ".babelignore",
							"description": "Archivo ignore para Babel",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Stylelint Ignore",
							"path": ".stylelintignore",
							"description": "Archivo ignore para Stylelint",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Markdownlint Ignore",
							"path": ".markdownlintignore",
							"description": "Archivo ignore para Markdownlint",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "TypeScript Ignore",
							"path": ".tsignore",
							"description": "Archivo ignore para TypeScript",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Roocode Ignore",
							"path": ".roocodeignore",
							"description": "Archivo ignore para Roocode AI",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Cline Ignore",
							"path": ".clineignore",
							"description": "Archivo ignore para Cline AI",
							"createIfNotExists": true,
							"enabled": true
						},
						{
							"name": "Gemini Ignore",
							"path": ".geminiignore",
							"description": "Archivo ignore para Gemini CLI",
							"createIfNotExists": true,
							"enabled": true
						}
					],
					"description": "Lista de archivos ignore configurados para la extensión"
				},
				"ai-ignore.showSelectionMenu": {
					"type": "boolean",
					"default": true,
					"description": "Mostrar menú de selección para elegir archivos ignore"
				},
				"ai-ignore.allowMultipleSelection": {
					"type": "boolean",
					"default": true,
					"description": "Permitir selección múltiple de archivos ignore"
				},
				"ai-ignore.createDirectories": {
					"type": "boolean",
					"default": true,
					"description": "Crear directorios automáticamente si no existen"
				},
				"ai-ignore.showConfirmation": {
					"type": "boolean",
					"default": true,
					"description": "Mostrar confirmación antes de añadir archivos"
				}
			}
		},
		"commands": [
			{
				"command": "ai-ignore.activate",
				"title": "Activate AI Ignore Helper"
			},
			{
				"command": "ai-ignore.addToIgnore",
				"title": "Add to Ignore Files and Rules"
			},
			{
				"command": "ai-ignore.addRule",
				"title": "AI Ignore: Add Rule"
			},
			{
				"command": "ai-ignore.removeRule",
				"title": "AI Ignore: Remove Rule"
			},
			{
				"command": "ai-ignore.openConfig",
				"title": "Open AI Ignore Helper Configuration"
			},
			{
				"command": "ai-ignore.syncFromJSON",
				"title": "AI Ignore: Sync from JSON to Settings"
			},
			{
				"command": "ai-ignore.syncToJSON",
				"title": "AI Ignore: Sync from Settings to JSON"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "ai-ignore.addToIgnore",
					"when": "resourceExtname || resourceFilename",
					"group": "1_modification"
				},
				{
					"command": "ai-ignore.openConfig",
					"when": "resourceFilename == ''",
					"group": "z_commands"
				}
			],
			"scm/resourceState/context": [
				{
					"command": "ai-ignore.addToIgnore",
					"group": "1_modification"
				}
			],
			"scm/resourceFolder/context": [
				{
					"command": "ai-ignore.addToIgnore",
					"group": "1_modification"
				}
			],
			"commandPalette": [
				{
					"command": "ai-ignore.openConfig",
					"when": "true"
				}
			]
		}
	}
}
